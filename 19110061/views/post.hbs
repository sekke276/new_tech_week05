
<h2>{{post.title}}</h2>
<form id="edit-form" mehtod="GETJ" action="/post/{{post.id}}/update">
    <button type="submit">Edit</button>
</form>

<p>{{post.content}}</p>
<h3>Comments</h3>
<ul>
    {{#each post.comments}}
        <li>{{this.content}}</li>
    {{/each}}
</ul>
<form id="comment-form" method="POST" action="/post/{{post.id}}/comment">
    <input type="text" id="comment" name="content" placeholder="Add a comment...">
    <button type="submit" >Submit</button>
</form>
